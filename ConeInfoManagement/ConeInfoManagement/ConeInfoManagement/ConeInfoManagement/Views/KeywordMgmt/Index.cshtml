@model IEnumerable<ConeInfoManagement.Models.Keyword>

@{
    ViewBag.Title = "Lists of Keyword Information";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.type)*@
            @Html.DisplayName("ID")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.name)*@
            @Html.DisplayName("Keyword")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.description)*@
            @Html.DisplayName("Description")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.type }) |
            @Html.ActionLink("Details", "Details", new { id=item.type }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.type })
        </td>
    </tr>
}

</table>
