<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="~/Images/logo.png" alt="Conestoga Info. Search" style="animation-delay:1s">
                </div>
                <div class="float-center">
                    <p style="font-size:50px; text-align:center;" class="site-title">@Html.ActionLink("Conestoga Info. Search", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Search", "Index", "SearchMgmt")</li>
                            <li>@Html.ActionLink("SearchLog", "Index", "SearchLogMgmt")</li>
                            <li>@Html.ActionLink("Analytics & Metrics", "Index", "AnalyticsMetricsMgmt")</li>
                            <li>@Html.ActionLink("Keyword", "Index", "KeywordMgmt")</li>
                            <li>@Html.ActionLink("Account", "Index", "AccountMgmt")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-right">
                    <p>&copy; Conestoga Info - Administration Management</p>
                    <nav>
                        <ul id="menu">
                        @*    <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
